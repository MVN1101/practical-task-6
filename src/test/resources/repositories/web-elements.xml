<?xml version="1.0" encoding="UTF-8"?>
<Pages xmlns="http://chameleon.ibs-qa.ru/schema/web-elements">
    <Page name="Главная страница">
        <Button name="Песочница"/>
        <Button name="Товары"/>
    </Page>
    <Page name="Список товаров">
        <Button name="Добавить"/>
        <Collection name="Таблица товаров" locator="//table/tbody/tr">
            <StaticText name="#" locator="//th[0]"/>
            <StaticText name="Наименование" locator="//th[1]"/>
            <StaticText name="Тип" locator="//th[2]"/>
            <StaticText name="Экзотический" locator="//th[3]"/>
        </Collection>
    </Page>
    <Page name="Добавление товара">
        <TextInput name="Наименование" locator="//input[@id='name']"/>
        <ComboBox name="Тип"/>
        <CheckBox name="Экзотический"/>
        <Button name="Сохранить"/>
    </Page>
</Pages>